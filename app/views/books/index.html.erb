<h1>Books</h1>
<h3>Title</h3>
<h3>Body</h3>
 <% @books.each do |book| %>
   <p><%= book.title %></p>
   <p><%= book.body %></p>
   <%= link_to "Show", book_path(book.id) %>
   <%= link_to "Edit", edit_book_path(book.id) %>
   <%= link_to "Destroy", book_path(book.id) , method: :delete %>
 <% end %>

<h1>New book</h1>
 <%= form_with model: @book, url: '/books', method: :post do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Body</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
 <% end %>
